<% layout('layouts/boilerplate') %>

<section class="contact-hero">
  <div class="contact-hero-content">
    <h1><i class="fa-solid fa-envelope-open-text"></i> Get in Touch</h1>
    <p>Have questions, feedback, or just want to say hello? We'd love to hear from you!</p>
  </div>
</section>

<section class="contact-form">
  <form>
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div class="form-group">
      <label for="subject">Subject:</label>
      <input type="text" id="subject" name="subject" required>
    </div>
    <div class="form-group">
      <label for="message">Message:</label>
      <textarea id="message" name="message" required></textarea>
    </div>
    <button type="submit" class="submit-btn">Send Message</button>
  </form>
</section>

<section class="contact-info">
  <h2>Other Ways to Contact Us</h2>

  <div class="info-grid">
    <div class="info-card">
      <i class="fa-solid fa-envelope fa-2x" style="color: var(--primary-green); margin-bottom: 0.5rem;"></i>
      <h3>Email</h3>
      <p>Drop us an email at <strong>info@freshfarm.com</strong> and we'll get back to you within 24 hours.</p>
    </div>
    <div class="info-card">
      <i class="fa-solid fa-phone fa-2x" style="color: var(--primary-green); margin-bottom: 0.5rem;"></i>
      <h3>Phone</h3>
      <p>Call us at <strong>+1 (555) 123-4567</strong> Monday to Friday, 9AM to 6PM (local time).</p>
    </div>
    <div class="info-card">
      <i class="fa-solid fa-location-dot fa-2x" style="color: var(--primary-green); margin-bottom: 0.5rem;"></i>
      <h3>Visit Us</h3>
      <p>Stop by our farm: <br>123 Farm Street,<br>Agricultural District,<br>City, State 12345.</p>
    </div>
  </div>
</section>
